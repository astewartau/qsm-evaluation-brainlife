#!/bin/bash

#SBATCH --job-name=template
#SBATCH --ntasks-per-node=4
#SBATCH --mem=16G
#SBATCH --time=01:00:00

echo "[INFO] Pulling Python v3.9 container..."
singularity pull docker://python:3.9-bookworm

echo "[INFO] Installing qsm-forward"
singularity exec python_3.9-bookworm.sif pip install --user nibabel matplotlib lazy_loader PyWavelets scikit-learn scikit-image

echo "[INFO] Starting main.py..."
singularity exec python_3.9-bookworm.sif python3 main.py

